  "templating": {
    "list": [
      {
        "current": { "text": "All", "value": "$__all" },
        "definition": "label_values(mcbot_fills_total, symbol)",
        "name": "symbol",
        "type": "query",
        "includeAll": true,
        "multi": true,
        "datasource": { "type": "prometheus", "uid": "prometheus" }
      }
    ]
