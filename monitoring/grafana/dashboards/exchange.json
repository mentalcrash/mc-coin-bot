{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "templating": {
    "list": [
      {
        "current": { "text": "All", "value": "$__all" },
        "definition": "label_values(mcbot_exchange_ws_connected, symbol)",
        "query": "label_values(mcbot_exchange_ws_connected, symbol)",
        "name": "symbol",
        "type": "query",
        "refresh": 2,
        "includeAll": true,
        "multi": true,
        "datasource": { "type": "prometheus", "uid": "prometheus" }
      }
    ]
  },
  "panels": [
    {
      "title": "Row 1: API Health",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false
    },
    {
      "title": "API Latency by Endpoint",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 1 },
      "targets": [
        { "expr": "histogram_quantile(0.50, rate(mcbot_exchange_api_latency_seconds_bucket[5m]))", "legendFormat": "P50 {{endpoint}}", "refId": "A" },
        { "expr": "histogram_quantile(0.95, rate(mcbot_exchange_api_latency_seconds_bucket[5m]))", "legendFormat": "P95 {{endpoint}}", "refId": "B" }
      ],
      "fieldConfig": { "defaults": { "unit": "s" }, "overrides": [] }
    },
    {
      "title": "API Call Rate",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 1 },
      "targets": [
        { "expr": "rate(mcbot_exchange_api_calls_total[5m])", "legendFormat": "{{endpoint}} ({{status}})", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] }
    },
    {
      "title": "Consecutive API Failures",
      "type": "stat",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 1 },
      "targets": [
        { "expr": "mcbot_exchange_consecutive_failures", "legendFormat": "Failures", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 3 },
              { "color": "red", "value": 5 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "title": "Row 2: WebSocket",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 9 },
      "collapsed": false
    },
    {
      "title": "WS Connection Status",
      "type": "state-timeline",
      "gridPos": { "h": 6, "w": 8, "x": 0, "y": 10 },
      "targets": [
        { "expr": "mcbot_exchange_ws_connected{symbol=~\"$symbol\"}", "legendFormat": "{{symbol}}", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "0": { "text": "Disconnected", "color": "red" }, "1": { "text": "Connected", "color": "green" } } }
          ]
        },
        "overrides": []
      }
    },
    {
      "title": "WS Reconnect Rate",
      "type": "timeseries",
      "gridPos": { "h": 6, "w": 8, "x": 8, "y": 10 },
      "targets": [
        { "expr": "rate(mcbot_ws_reconnects_total{symbol=~\"$symbol\"}[5m])", "legendFormat": "{{symbol}}", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] }
    },
    {
      "title": "WS Message Rate",
      "type": "timeseries",
      "gridPos": { "h": 6, "w": 8, "x": 16, "y": 10 },
      "targets": [
        { "expr": "rate(mcbot_ws_messages_received_total{symbol=~\"$symbol\"}[5m])", "legendFormat": "{{symbol}}", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] }
    },
    {
      "title": "WS Message Age",
      "type": "timeseries",
      "gridPos": { "h": 6, "w": 24, "x": 0, "y": 16 },
      "targets": [
        { "expr": "mcbot_ws_last_message_age_seconds{symbol=~\"$symbol\"}", "legendFormat": "{{symbol}}", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 30 },
              { "color": "red", "value": 60 }
            ]
          }
        },
        "overrides": []
      }
    }
  ],
  "schemaVersion": 39,
  "tags": ["trading", "mc-coin-bot"],
  "time": { "from": "now-24h", "to": "now" },
