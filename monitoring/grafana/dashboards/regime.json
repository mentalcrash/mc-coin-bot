{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "templating": {
    "list": [
      {
        "current": { "text": "All", "value": "$__all" },
        "definition": "label_values(mcbot_last_bar_age_seconds, symbol)",
        "name": "symbol",
        "type": "query",
        "includeAll": true,
        "multi": true,
        "datasource": { "type": "prometheus", "uid": "prometheus" }
      }
    ]
  },
  "panels": [
    {
      "title": "Row 1: Data Freshness",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false
    },
    {
      "title": "Bar Age per Symbol",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 1 },
      "targets": [
        { "expr": "mcbot_last_bar_age_seconds{symbol=~\"$symbol\"}", "legendFormat": "{{symbol}}", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 120 },
              { "color": "red", "value": 300 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "title": "Stale Symbol Count",
      "type": "stat",
      "gridPos": { "h": 8, "w": 4, "x": 12, "y": 1 },
      "targets": [
        { "expr": "count(mcbot_last_bar_age_seconds > 120) or vector(0)", "legendFormat": "Stale", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 3 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "title": "Heartbeat Timestamp",
      "type": "stat",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 1 },
      "targets": [
        { "expr": "time() - mcbot_heartbeat_timestamp", "legendFormat": "Age", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 60 },
              { "color": "red", "value": 300 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "title": "Row 2: Risk & Alerts",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 9 },
      "collapsed": false
    },
    {
      "title": "Risk Alerts Rate",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 10 },
      "targets": [
        { "expr": "rate(mcbot_risk_alerts_total[5m])", "legendFormat": "{{level}}", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] }
    },
    {
      "title": "Circuit Breaker Count",
      "type": "stat",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 10 },
      "targets": [
        { "expr": "mcbot_circuit_breaker_total", "legendFormat": "CB Events", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "title": "Component Errors Rate",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 10 },
      "targets": [
        { "expr": "rate(mcbot_errors_total[5m])", "legendFormat": "{{component}} ({{error_type}})", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] }
    }
  ],
  "schemaVersion": 39,
  "tags": ["trading", "mc-coin-bot"],
  "time": { "from": "now-24h", "to": "now" },
  "timepicker": {},
  "timezone": "utc",
  "title": "MC Coin Bot â€” Regime",
  "uid": "mc-regime",
  "version": 1
}
