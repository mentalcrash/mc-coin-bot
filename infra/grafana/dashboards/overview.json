{
  "uid": "mcbot-overview",
  "title": "MC-Coin-Bot â€” Overview",
  "description": "Equity, PnL, Drawdown, Positions, Signals/Fills",
  "tags": ["mcbot"],
  "timezone": "utc",
  "editable": true,
  "refresh": "30s",
  "time": {
    "from": "now-24h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Equity (USDT)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "mcbot_equity_usdt",
          "legendFormat": "Equity"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 0 }
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Drawdown %",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "mcbot_drawdown_pct",
          "legendFormat": "Drawdown"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "color": { "mode": "fixed", "fixedColor": "red" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.05 },
              { "color": "red", "value": 0.08 }
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Realized PnL",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "mcbot_realized_profit_usdt_total - mcbot_realized_loss_usdt_total",
          "legendFormat": "Realized PnL"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "currencyUSD" }
      }
    },
    {
      "id": 4,
      "title": "Open Positions",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "mcbot_open_positions",
          "legendFormat": "Positions"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "blue", "value": null },
              { "color": "yellow", "value": 5 },
              { "color": "red", "value": 10 }
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Leverage",
      "type": "gauge",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 8 },
      "targets": [
        {
          "expr": "mcbot_aggregate_leverage",
          "legendFormat": "Leverage"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0,
          "max": 3,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 2 }
            ]
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Signals vs Fills (rate/min)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "rate(mcbot_signals_total[5m]) * 60",
          "legendFormat": "Signals/min"
        },
        {
          "expr": "rate(mcbot_fills_total[5m]) * 60",
          "legendFormat": "Fills/min"
        }
      ]
    },
    {
      "id": 7,
      "title": "Order Latency (p50 / p99)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(mcbot_order_latency_seconds_bucket[5m]))",
          "legendFormat": "p50"
        },
        {
          "expr": "histogram_quantile(0.99, rate(mcbot_order_latency_seconds_bucket[5m]))",
          "legendFormat": "p99"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s" }
      }
    }
  ],
  "schemaVersion": 39,
  "version": 1
}
