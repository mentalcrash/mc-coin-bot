{
  "uid": "mcbot-system",
  "title": "MC-Coin-Bot â€” System",
  "description": "Event Loop Lag, RSS, CPU%, FDs, WS Status, EventBus Queue",
  "tags": ["mcbot"],
  "timezone": "utc",
  "editable": true,
  "refresh": "10s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Event Loop Lag",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "mcbot_event_loop_lag_seconds",
          "legendFormat": "Lag"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.5 },
              { "color": "red", "value": 1.0 }
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Active asyncio Tasks",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "mcbot_active_tasks",
          "legendFormat": "Tasks"
        }
      ]
    },
    {
      "id": 3,
      "title": "Process RSS Memory",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "mcbot_process_memory_rss_bytes",
          "legendFormat": "RSS"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1073741824 },
              { "color": "red", "value": 2147483648 }
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "CPU %",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "mcbot_process_cpu_percent",
          "legendFormat": "CPU%"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 50 },
              { "color": "red", "value": 80 }
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Open File Descriptors",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "mcbot_process_open_fds",
          "legendFormat": "FDs"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 500 },
              { "color": "red", "value": 1000 }
            ]
          }
        }
      }
    },
    {
      "id": 6,
      "title": "WebSocket Status",
      "type": "stat",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 16 },
      "targets": [
        {
          "expr": "mcbot_exchange_ws_connected",
          "legendFormat": "{{ symbol }}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "0": { "text": "Disconnected", "color": "red" }, "1": { "text": "Connected", "color": "green" } } }
          ]
        }
      }
    },
    {
      "id": 7,
      "title": "EventBus Queue Depth",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 16 },
      "targets": [
        {
          "expr": "mcbot_eventbus_queue_depth",
          "legendFormat": "Queue"
        },
        {
          "expr": "mcbot_eventbus_events_dropped_total",
          "legendFormat": "Dropped"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 50 },
              { "color": "red", "value": 100 }
            ]
          }
        }
      }
    }
  ],
  "schemaVersion": 39,
  "version": 1
}
